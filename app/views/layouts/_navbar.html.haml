%nav.top-bar{ 'data-topbar' => true }
  %ul.title-area
    %li.name
      %h1= link_to Setting.value('title'), root_path
    %li.toggle-topbar.menu-icon
      %a{href: '#'}= t :menu

  %section.top-bar-section
    %ul.right
      %li.has-dropdown
        %a{ href: '#' }
          = current_user.email
          = image_tag current_user.gravatar(20)
        %ul.dropdown
          %li
            = link_to destroy_user_session_path, method: :delete do
              = icon 'sign-out'
              = t :logout
    %ul.left
      %li.active
        = link_to new_post_path, 'data-key' => 'ctrl+e' do
          = icon 'plus'
          = t :new
    = yield :navbar
