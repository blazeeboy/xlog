= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= pluralize(@post.errors.count, "error") + " prohibited this post from being saved"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
          
  .field= f.text_field :title, placeholder: 'Amazing post title here'
  .field= f.text_area :body, 'data-expanding' => true, 'placeholder' => 'Your most exciting post goes here'
  .actions= f.submit 'Publish', 'data-key' => 'ctrl+s'